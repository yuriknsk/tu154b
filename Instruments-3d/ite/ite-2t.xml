<!-- Turbine turn indicator ITE-2t (two needles)
3D instrument for Tu-154 -->
<PropertyList>
 <params>
   <n1>/fdm/jsbsim/propulsion/engine[0]/n1-rna-filtered</n1>
   <n2>engines/engine[0]/n2</n2>
 </params>

 <path>ite-2t.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>


<!--Needles-->

<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property alias="../../params/n2"/>
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	51.0</dep></entry>
      <entry><ind>	60.0</ind>	<dep>	236.0</dep></entry>
      <entry><ind>	100.0</ind>	<dep>	360.0</dep></entry>
      <entry><ind>	110.0</ind>	<dep>	392.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>needle_2</object-name>
  <property alias="../../params/n1"/>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	51.0</dep></entry>
    <entry><ind>	60.0</ind>	<dep>	236.0</dep></entry>
    <entry><ind>	100.0</ind>	<dep>	360.0</dep></entry>
    <entry><ind>	110.0</ind>	<dep>	392.0</dep></entry>
  </interpolation>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>


</PropertyList>
