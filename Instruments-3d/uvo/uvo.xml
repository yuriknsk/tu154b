      <entry><ind>	999.9</ind>	<dep>	359.9</dep></entry>
    </table>
  </expression>
  <center>
    <x-m>-0.01117</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02310</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>



</PropertyList>
