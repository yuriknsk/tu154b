<!-- Exhaust gas temperature indicator UT-7A-710
3D instrument for Tu-154 -->
<PropertyList>
  <params>
    <egt>fdm/jsbsim/propulsion/engine[0]/egt-filtered</egt>
  </params>

 <path>ut-7a.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>


<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property alias="../../params/egt"/>
<!--Farenheit-->
<!--    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-134.0</dep></entry>
      <entry><ind>	1110.7</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	2190.6</ind>	<dep>	134.0</dep></entry>
    </interpolation>-->
<!--Celsius-->
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-134.0</dep></entry>
      <entry><ind>	600.0</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	1200.0</ind>	<dep>	134.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>needle_2</object-name>
  <property alias="../../params/egt"/>
  <factor>3.6</factor>
  <offset-deg>180.0</offset-deg>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02104</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>


</PropertyList>
