<!-- IDR-1 range indicator
3D instrument for Tu-154 -->
<PropertyList>
 <path>idr-1.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>text</object-name>
  <object-name>dig_hund</object-name>
  <object-name>dig_dec</object-name>
  <object-name>dig_ones</object-name>
  <object-name>dig_hm</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>blanker</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
  </emission>
</animation>

<!--Digit wheels-->
<animation>
  <type>rotate</type>
  <object-name>dig_hm</object-name>
  <property>tu154/instrumentation/idr-1[0]/indicated-wheels_dec_m</property>
  <factor>36.0</factor>
  <center>
    <x-m>-0.02264</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>dig_ones</object-name>
  <property>tu154/instrumentation/idr-1[0]/indicated-wheels_hund_m</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	0.9</ind>	<dep>	0.1</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	36.0</dep></entry>
    <entry><ind>	1.9</ind>	<dep>	36.1</dep></entry>
