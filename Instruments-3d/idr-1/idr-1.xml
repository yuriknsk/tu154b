    <entry><ind>	9.0</ind>	<dep>	324.0</dep></entry>
    <entry><ind>	9.9</ind>	<dep>	324.1</dep></entry>
    <entry><ind>	9.99</ind>	<dep>	359.9</dep></entry>
  </interpolation>
  <center>
    <x-m>-0.02264</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

