<!-- AZS type 4
3D instrument for Tu-154 -->
<PropertyList>
 <path>azs_3.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>handle</object-name>
  <emission>
    <red-prop>tu154/light/panel/ext-red</red-prop>
    <green-prop>tu154/light/panel/ext-green</green-prop>
    <blue-prop>tu154/light/panel/ext-blue</blue-prop>
  </emission>
</animation>

  
<animation>
  <type>rotate</type>
  <object-name>handle</object-name>
  <property>tu154/switches/APU-bleed</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	2.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Control-->
<animation>
  <type>pick</type>
  <object-name>hotspot_3</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/APU-bleed", 2.0, 0.1 );
        setprop("tu154/systems/APU/APU-bleed", getprop("tu154/systems/APU/APU-bleed" ) - 0.1 );
        if( 0.0 > getprop("tu154/systems/APU/APU-bleed" ) )
        setprop("tu154/systems/APU/APU-bleed",0.0);
      </script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>
          interpolate("tu154/switches/APU-bleed", 1.0, 0.1 );
        </script>
      </binding>
    </mod-up>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/APU-bleed", 1.0, 0.1 );
      </script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>
          interpolate("tu154/switches/APU-bleed", 1.0, 0.1 );
        </script>
      </binding>
    </mod-up>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/APU-bleed", 0.0, 0.1 );
        setprop("tu154/systems/APU/APU-bleed", getprop("tu154/systems/APU/APU-bleed" ) + 0.1 );
        if( getprop("tu154/systems/APU/APU-bleed" ) > 5.0 )
        setprop("tu154/systems/APU/APU-bleed",5.0);
      </script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>
          interpolate("tu154/switches/APU-bleed", 1.0, 0.1 );
        </script>
      </binding>
    </mod-up>
  </action>
</animation>



</PropertyList>
