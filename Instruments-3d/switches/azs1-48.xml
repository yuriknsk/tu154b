<!-- AZS type 1
3D instrument for Tu-154 -->
<PropertyList>
 <path>azs_3.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>handle</object-name>
  <emission>
    <red-prop>tu154/light/panel/ext-red</red-prop>
    <green-prop>tu154/light/panel/ext-green</green-prop>
    <blue-prop>tu154/light/panel/ext-blue</blue-prop>
  </emission>
</animation>

  
<animation>
  <type>rotate</type>
  <object-name>handle</object-name>
  <property>tu154/switches/DISS-check</property>  
  <factor>60</factor>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Control-->
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/DISS-check",  1, 0.1 );
        setprop("fdm/jsbsim/instrumentation/nvu/source", 2);
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/DISS-check", 0, 0.1 );
        setprop("fdm/jsbsim/instrumentation/nvu/source", 1);
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_3</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/DISS-check", -1, 0.1 );
        setprop("fdm/jsbsim/instrumentation/nvu/source", 0);
      </script>
    </binding>
  </action>
</animation>

</PropertyList>
