<!-- PU-11 control gauge
3D instrument for Tu-154 -->
<PropertyList>
 <path>pu-11.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
    <emission>
    <red-prop>tu154/light/panel/ext-red</red-prop>
    <green-prop>tu154/light/panel/ext-green</green-prop>
    <blue-prop>tu154/light/panel/ext-blue</blue-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>switches</object-name>
  <emission>
    <red-prop>tu154/light/panel/ext-red</red-prop>
    <green-prop>tu154/light/panel/ext-green</green-prop>
    <blue-prop>tu154/light/panel/ext-blue</blue-prop>
    <factor>0.5</factor>
  </emission>
</animation>

<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>text</object-name>
  <object-name>lat</object-name>
  <object-name>handle_fi</object-name>
  <object-name>otkaz_o_2</object-name>
  <object-name>otkaz_k_2</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>



<!--Failure lamps-->

<!--Have voltage?-->
<animation>
  <type>material</type>
  <object-name>otkaz_o_on</object-name>
  <object-name>otkaz_k_on</object-name>
  <emission>
    <red>1.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
    <factor-prop>tu154/systems/electrical/buses/DC27-bus-L/volts</factor-prop>
  </emission>
</animation>


<animation>
  <type>select</type>
  <object-name>otkaz_o_on</object-name>
  <condition>
    <not><property>instrumentation/heading-indicator[0]/serviceable</property></not>
 </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>otkaz_k_on</object-name>
  <condition>
    <not><property>instrumentation/heading-indicator[1]/serviceable</property></not>
  </condition>
</animation>
  
<animation>
  <type>rotate</type>
  <object-name>potr_handle</object-name>
  <property>tu154/switches/pu-11-consumers</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-45.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	45.0</dep></entry>
  </interpolation>
  <center>
    <x-m>-0.00274</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.00725</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

