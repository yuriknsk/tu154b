<!--Latitude disc-->
<animation>
  <type>rotate</type>
  <object-name>lat</object-name>
  <property>fdm/jsbsim/instrumentation/tks-lat-deg</property>
  <interpolation>
    <entry><ind>	90.0</ind>	<dep>	-131.0</dep></entry>
    <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	-90.0</ind>	<dep>	139.0</dep></entry>
  </interpolation>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Latitude handle-->
<animation>
  <type>knob</type>
  <object-name>handle_fi</object-name>
  <property>fdm/jsbsim/instrumentation/pu11-latitude</property>
  <factor>20.0</factor>
  <visible>true</visible>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>fdm/jsbsim/instrumentation/pu11-latitude</property>
      <min>-90.0</min>
      <max>90.0</max>
      <wrap>false</wrap>
    </binding>
  </action>
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>pu-11-latitude</tooltip-id>
      <label>Latitude: %+03dÂ°</label>
      <property>fdm/jsbsim/instrumentation/pu11-latitude</property>
    </binding>
  </hovered>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.05483</y-m>
    <z-m>0.0303</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>


<!--Button-->
<animation>
  <type>translate</type>
  <object-name>button</object-name>
  <property>tu154/switches/pu-11-button</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	0.003</dep></entry>
  </interpolation>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

