<!--Plane deg-->  
<animation>
  <type>rotate</type>
  <object-name>dig_plane_ones</object-name>
  <property alias="../../params/plane-dialed"/>
  <factor>36</factor>
  <center>
    <x-m>-0.01393</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0534</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>dig_plane_dec</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property alias="../../../../../../params/plane-dialed"/>
          <value>100</value>
        </mod>
        <mod>
          <property alias="../../../../../../params/plane-dialed"/>
          <value>10</value>
        </mod>
      </difference>
      <value>3.6</value>
    </product>
  </expression>
  <center>
    <x-m>-0.01393</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0534</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>dig_plane_hund</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property alias="../../../../../../params/plane-dialed"/>
          <value>1000</value>
        </mod>
        <mod>
          <property alias="../../../../../../params/plane-dialed"/>
          <value>100</value>
        </mod>
      </difference>
      <value>0.36</value>
    </product>
  </expression>
  <center>
    <x-m>-0.01393</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0534</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>



<!--Handles-->
<animation>
  <type>knob</type>
  <object-name>plane_sym_handle</object-name>
  <property alias="../../params/plane-dialed"/>
  <factor>5.0</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.05358</y-m>
    <z-m>-0.05518</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
  <action>
    <binding>
      <command>property-adjust</command>
      <property alias="../../../../params/plane-dialed"/>
      <factor>1</factor>
      <min>0</min>
      <max>360</max>
      <wrap>true</wrap>
    </binding>
  </action>
</animation>
<animation>
  <type>knob</type>
  <object-name>heading_sym_handle</object-name>
  <property alias="../../params/dir-course"/>
  <factor>5.0</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.05386</y-m>
    <z-m>-0.05461</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
  <action>
    <binding>
      <command>property-adjust</command>
      <property alias="../../../../params/dir-course"/>
      <factor>1</factor>
      <min>0</min>
      <max>360</max>
      <wrap>true</wrap>
    </binding>
  </action>
</animation>


</PropertyList>
