      <entry><ind>	2000.0</ind>	<dep>	-70.0</dep></entry>
      <entry><ind>	3000.0</ind>	<dep>	-25.0</dep></entry>
      <entry><ind>	4000.0</ind>	<dep>	21.0</dep></entry>
      <entry><ind>	5000.0</ind>	<dep>	65.0</dep></entry>
