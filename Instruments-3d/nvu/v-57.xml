<!-- V-57 NVU (navigation system) control
3D instrument for Tu-154 -->
<PropertyList>
 <path>v-57.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
    <emission>
    <red-prop>tu154/light/panel/ext-red</red-prop>
    <green-prop>tu154/light/panel/ext-green</green-prop>
    <blue-prop>tu154/light/panel/ext-blue</blue-prop>
  </emission>
</animation>

<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>text</object-name>
  <object-name>digits</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

<!-- Buttons -->
<animation>
  <type>pick</type>
  <object-name>hs_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>nasal</command>
      <script>instruments.nvu_wind_adjust("azimuth", -1)</script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>instruments.nvu_wind_adjust("azimuth", 0)</script>
      </binding>
    </mod-up>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-cycle</command>
      <property>tu154/instrumentation/v-57/azimuth-adjust-step</property>
      <value>0.25</value>
      <value>10</value>
    </binding>
  </action>
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>nvu-azimuth-adjust-step</tooltip-id>
      <label>Adjust speed: %s</label>
      <property>tu154/instrumentation/v-57/azimuth-adjust-step</property>
      <mapping>nasal</mapping>
      <script>return (arg[0] == 0.25 ? "slow" : "fast")</script>
    </binding>
  </hovered>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_3</object-name>
