<!-- Attitude indicator
     3D instrument for Tu-154 -->
<PropertyList>
  <params>
    <defl-course>tu154/instrumentation/pnp[0]/defl-course</defl-course>
    <defl-gs>tu154/instrumentation/pnp[0]/defl-gs</defl-gs>
    <blank-course>tu154/instrumentation/pnp[0]/blank-course</blank-course>
    <blank-gs>tu154/instrumentation/pnp[0]/blank-gs</blank-gs>
    <failed>tu154/instrumentation/bkk/mgv-1-failure</failed>
  </params>

  <path>pkp.ac</path>
  <!--External panel lighting-->
  <animation>
    <type>material</type>
    <object-name>cover</object-name>
    <emission>
      <red-prop>tu154/light/panel/ext-red</red-prop>
      <green-prop>tu154/light/panel/ext-green</green-prop>
      <blue-prop>tu154/light/panel/ext-blue</blue-prop>
    </emission>
  </animation>

  <!-- Internal instrument lighting -->  
  <animation>
    <type>material</type>
    <object-name>internal</object-name>
    <object-name>sphere</object-name>
    <object-name>text_1</object-name>
    <object-name>cylinder_1_t</object-name>
    <object-name>cylinder_2_t</object-name>
    <object-name>cylinder_3_t</object-name>
    <object-name>right_face_t</object-name>
    <object-name>right_h_t</object-name>
    <object-name>right_v_t</object-name>
    <object-name>test_t</object-name>
    <object-name>center</object-name>
    <object-name>right_h_t</object-name>
    <object-name>gliss_flag</object-name>
    <object-name>kurs_flag</object-name>
    <object-name>ag_flag</object-name>
    <object-name>kurs_marker</object-name>
    <object-name>gliss_marker</object-name>
    <object-name>gliss_ring</object-name>
    <object-name>gliss_director</object-name>
    <object-name>kurs_director</object-name>
    <object-name>roll_marker</object-name>
    <object-name>handle_marker</object-name>
    <emission>
      <red-prop>tu154/light/instruments/int-red</red-prop>
      <green-prop>tu154/light/instruments/int-green</green-prop>
      <blue-prop>tu154/light/instruments/int-blue</blue-prop>
    </emission>
  </animation>

<!--Attitude-->
<animation>
    <type>rotate</type>
    <object-name>sphere</object-name>
    <object-name>roll_marker</object-name>
    <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
    <center>
      <x-m>-0.07892</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>
  
<animation>
  <type>rotate</type>
  <object-name>sphere</object-name>
  <property>instrumentation/attitude-indicator/indicated-pitch-deg</property>  
  <center>
    <x-m>-0.07892</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>
  
<!--Markers-->

<animation>
  <type>rotate</type>
  <object-name>gliss_marker</object-name>
  <property alias="../../params/defl-gs"/>
  <factor>25.0</factor>
  <center>
    <x-m>-0.06405</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>gliss_ring</object-name>
  <property>fdm/jsbsim/ap/at-error</property>
  <factor>0.8</factor>
  <max-deg>30.0</max-deg>
  <min-deg>-30.0</min-deg>
  <center>
    <x-m>-0.06405</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>kurs_marker</object-name>
  <property alias="../../params/defl-course"/>
  <factor>25.0</factor>
  <center>
    <x-m>-0.05872</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>1.0</z>
  </axis>
</animation>

<!--Directors-->

<animation>
  <type>rotate</type>
  <object-name>kurs_director</object-name>
  <property>tu154/instrumentation/pkp[0]/roll-director</property>  
  <factor>57.3</factor>
  <max-deg>30.0</max-deg>
  <min-deg>-30.0</min-deg>

  <center>
    <x-m>-0.07892</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>1.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>gliss_director</object-name>
  <property>tu154/instrumentation/pkp[0]/pitch-director</property>  
  <factor>114.6</factor>
  <max-deg>30.0</max-deg>
  <min-deg>-30.0</min-deg>
  <center>
    <x-m>-0.07892</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>


<!--Slip-->
<animation>
  <type>rotate</type>
  <object-name>slip_ball</object-name>
  <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
  <max-deg>10.0</max-deg>
  <min-deg>-10.0</min-deg>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.1</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Blankers-->

<animation>
  <type>rotate</type>
  <object-name>kurs_flag</object-name>
  <property alias="../../params/blank-gs"/>
  <factor>180.0</factor>
  <offset-deg>180.0</offset-deg>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.024</y-m>
    <z-m>0.0488</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>gliss_flag</object-name>
  <property alias="../../params/blank-course"/>
  <factor>180.0</factor>
  <offset-deg>180.0</offset-deg>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.055</y-m>
    <z-m>0.0267</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ag_flag</object-name>
  <property alias="../../params/failed"/>
  <factor>180.0</factor>
  <offset-deg>180.0</offset-deg>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.0615</y-m>
    <z-m>-0.0397</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--+++++++++++++++++ pitch ++++++++++++++++++-->
<animation>
  <type>pick</type>
  <object-name>hs2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>property-adjust</command>
      <property>tu154/switches/pu-46-pitch-wheel</property>
      <step>3.0</step>
    </binding>
    <binding>
      <command>property-adjust</command>
      <property>fdm/jsbsim/ap/stab-input-pitch-rad</property>
      <step>0.002</step>
      <max>0.8</max>
    </binding>
    <binding>
      <command>nasal</command>
      <script>absu.absu_drop_mvh()</script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs4</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>property-adjust</command>
      <property>tu154/switches/pu-46-pitch-wheel</property>
      <step>-3.0</step>
    </binding>
    <binding>
      <command>property-adjust</command>
      <property>fdm/jsbsim/ap/stab-input-pitch-rad</property>
      <step>-0.002</step>
      <min>-0.2</min>
    </binding>
    <binding>
      <command>nasal</command>
      <script>absu.absu_drop_mvh()</script>
    </binding>
  </action>
</animation>


