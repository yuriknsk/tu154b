<effect>
 <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>cover_1</object-name>
  <object-name>cover_2</object-name>
  <object-name>cover_3</object-name>
  <object-name>cover_4</object-name>
  <object-name>cover_5</object-name>
</effect>

<!--Indicators-->
<animation>
  <type>material</type>
  <object-name>text_1</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/warning/rvrn/state</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_2</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/rudder-trim-neutral</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_3</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/aileron-trim-neutral</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_4</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/elevator-trim-neutral</factor-prop>
  </emission>
</animation>

<!--Check lamps procedure-->
<animation>
  <type>material</type>
  <object-name>text_1</object-name>
  <object-name>text_2</object-name>
  <object-name>text_3</object-name>
  <object-name>text_4</object-name>
  <condition>
    <property>tu154/systems/electrical/checking-lamps/main-panel</property>
  </condition>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/checking-lamps/main-panel</factor-prop>
  </emission>
</animation>

<!--Controls-->
<animation>
  <type>pick</type>
  <object-name>hs_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>controls/flight/rudder-trim</property>
      <value>0.0</value>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>controls/flight/aileron-trim</property>
      <value>0.0</value>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_3</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>absu.absu_met_neutral()</script>
    </binding>    
  </action>
</animation>


</PropertyList>
