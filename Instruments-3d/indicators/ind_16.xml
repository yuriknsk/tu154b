</effect>

<!--Indicators-->
<animation>
  <type>material</type>
  <object-name>text_1</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/engine-2/low-oil</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_2</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/engine-2/metal-in-oil</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_3</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/engine-2/overflow-oil</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_4</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/engine-2/p-oil</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_5</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
  </emission>
  <condition>
    <and>
      <property>tu154/systems/electrical/buses/DC27-bus-L/volts</property>
      <or>
        <not><property>fdm/jsbsim/fuel/has-pressure-e2</property></not>
        <property>tu154/systems/electrical/checking-lamps/engine-panel</property>
      </or>
    </and>
  </condition>
</animation>
<animation>
  <type>material</type>
  <object-name>text_6</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/engine-2/filter-clog</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_7</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/engine-2/egt-danger</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_8</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/engine-2/egt-stop</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_9</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
  <factor-prop>tu154/systems/electrical/indicators/engine-2/t-bearing-danger</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_10</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/engine-2/vibration</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_11</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>fdm/jsbsim/propulsion/engine[1]/bypass-switched</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_12</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>fdm/jsbsim/propulsion/engine[1]/rna-lamp</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_13</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/autothrottle-on</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>text_14</object-name>
