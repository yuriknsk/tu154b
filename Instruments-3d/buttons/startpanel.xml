<!-- Engines start panel
3D instrument for Tu-154 -->
<PropertyList>
 <path>startpanel.ac</path>
<!-- Internal instruments lighting -->

<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>c_1</object-name>
  <object-name>_c_1</object-name>
  <object-name>_c_2</object-name>
  <object-name>button_1</object-name>
  <object-name>button_2</object-name>
  <object-name>handle_1</object-name>
  <object-name>handle_2</object-name>
  <object-name>handle_3</object-name>
  <object-name>handle_4</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

<!-- "PDA working" green lamp -->
<!--Brightness-->
<animation>
  <type>material</type>
  <object-name>_d_2</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/checking-lamps/lamps-power</factor-prop>
  </emission>
</animation>

<!--Set-->
<animation>
  <type>select</type>
  <object-name>_d_2</object-name>
  <condition>
    <or>
      <property>controls/engines/engine[0]/starter</property>
      <property>controls/engines/engine[1]/starter</property>
      <property>controls/engines/engine[2]/starter</property>
      <property>tu154/systems/electrical/checking-lamps/engine-panel</property>
    </or>
  </condition>
</animation>

  
<!--Cover-->

<animation>
    <type>rotate</type>
    <object-name>cover</object-name>
    <property>tu154/switches/startpanel-cover</property>
    <factor>90.0</factor>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.05</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
</animation>

<!--Start switch-->
<animation>
  <type>rotate</type>
  <object-name>handle_1</object-name>
  <property>tu154/switches/startpanel-start</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0633</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Cold  switch-->
<animation>
  <type>rotate</type>
  <object-name>handle_2</object-name>
  <property>tu154/switches/startpanel-cold</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0294</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Heating  switch-->
<animation>
