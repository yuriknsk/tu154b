    <z>0.5</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_4</object-name>
  <property>tu154/switches/startpanel-selector-1</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.001</y-m>
    <z-m>-0.0128</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>0.866</y>
    <z>-0.5</z>
  </axis>
</animation>

<!--buttons-->
<animation>
  <type>translate</type>
  <object-name>b_3_1</object-name>
  <property>tu154/switches/startpanel-button-1</property>  
  <factor>0.002</factor>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>translate</type>
  <object-name>b_3_2</object-name>
  <property>tu154/switches/startpanel-button-2</property>  
  <factor>0.002</factor>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>


<!--Controls-->
<!--Buttons-->
<animation>
  <type>pick</type>
  <object-name>b_3_1</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        engines.start_engine();
      </script>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>tu154/switches/startpanel-button-1</property>  
      <value>1.0</value>
    </binding>
    <mod-up>
      <binding>
        <command>property-assign</command>
        <property>tu154/switches/startpanel-button-1</property>  
        <value>0.0</value>
      </binding>
    </mod-up>
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>b_3_2</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        engines.break_start();
      </script>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>tu154/switches/startpanel-button-2</property>  
      <value>1.0</value>
    </binding>
    <mod-up>
      <binding>
        <command>property-assign</command>
        <property>tu154/switches/startpanel-button-2</property>  
        <value>0.0</value>
      </binding>
    </mod-up>
  </action>
</animation>

<!--Cover-->
<animation>
  <type>pick</type>
  <object-name>cover</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        if( getprop("tu154/switches/startpanel-cover" ) == 0.0 )
        	interpolate("tu154/switches/startpanel-cover", 1.0, 0.1 );
        else 	interpolate("tu154/switches/startpanel-cover", 0.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>

