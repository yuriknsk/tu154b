<?xml version="1.0"?>
<PropertyList>
  <params>
    <model>knob_1.ac</model>
    <button/>
    <signal/>
  </params>

  <path alias="../params/model"/>

  <!--External panel lighting-->
  <animation>
    <type>material</type>
    <object-name>button</object-name>
    <emission>
      <red-prop>tu154/light/panel/ext-red</red-prop>
      <green-prop>tu154/light/panel/ext-green</green-prop>
      <blue-prop>tu154/light/panel/ext-blue</blue-prop>
    </emission>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>button</object-name>
    <property alias="../../params/button"/>
    <factor>0.002</factor>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-interpolate</command>
        <property alias="../../../../params/button"/>
        <value>1</value>
        <time>0.1</time>
      </binding>
      <binding>
        <command>property-assign</command>
        <property alias="../../../../params/signal"/>
        <value>1</value>
        <condition>
          <property>tu154/systems/electrical/buses/DC27-bus-L/volts</property>
        </condition>
      </binding>
      <mod-up>
        <binding>
          <command>property-interpolate</command>
          <property alias="../../../../../params/button"/>
          <value>0</value>
          <time>0.1</time>
        </binding>
        <binding>
          <command>property-assign</command>
          <property alias="../../../../../params/signal"/>
          <value>0</value>
        </binding>
      </mod-up>
    </action>
  </animation>

</PropertyList>
