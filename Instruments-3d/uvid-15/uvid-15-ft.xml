<!--Controls-->

<animation>
  <type>knob</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/altimeter[1]/inhgX100</property>
      <min>0</min>
      <max>3365</max>
    </binding>
