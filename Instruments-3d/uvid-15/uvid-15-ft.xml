<!--Pressure digits-->
<animation>
  <type>rotate</type>
  <object-name>dig_p_ones</object-name>
  <property>tu154/instrumentation/altimeter[1]/inhgX100</property>
  <factor>36.0</factor>
  <center>
    <x-m>-0.01257</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02389</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>dig_p_dec</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property>tu154/instrumentation/altimeter[1]/inhgX100</property>
          <value>100</value>
        </mod>
        <mod>
          <property>tu154/instrumentation/altimeter[1]/inhgX100</property>
          <value>10</value>
        </mod>
      </difference>
      <value>3.6</value>
    </product>
  </expression>
  <center>
    <x-m>-0.01257</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02389</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

