<!-- Altimeter UVID-15 feet
3D instrument for Tu-154 -->
<PropertyList>
 <path>uvid-15f.ac</path>

 <animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>dig_a_dec</object-name>
  <object-name>dig_a_hund</object-name>
  <object-name>dig_a_ths</object-name>
  <object-name>dig_a_decths</object-name>
  <object-name>dig_p_ones</object-name>
  <object-name>dig_p_dec</object-name>
  <object-name>dig_p_hund</object-name>
  <object-name>dig_p_ths</object-name>
  <object-name>needle</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

<!--Warning lamp-->
<animation>
  <type>material</type>
  <object-name>lamp</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/checking-lamps/lamps-power</factor-prop>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>lamp</object-name>
  <condition>
    <or>
      <and>
       <less-than>
      	<property>instrumentation/altimeter[1]/indicated-altitude-ft</property>
        <value>0.0</value>
       </less-than>
       <property>tu154/instrumentation/altimeter[1]/powered</property>
      </and>
      <property>tu154/systems/electrical/checking-lamps/main-panel</property>
    </or>
  </condition>
</animation>

  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/altimeter[1]/indicated-altitude-ft</property>
    <factor>0.36</factor>
    <condition>
    	<property>tu154/instrumentation/altimeter[1]/powered</property>
    </condition>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<!--Altitude digits-->
<animation>
  <type>rotate</type>
  <object-name>dig_a_dec</object-name>
  <condition>
    <property>tu154/instrumentation/altimeter[1]/powered</property>
  </condition>
  <property>instrumentation/altimeter[1]/indicated-altitude-ft</property>
  <factor>3.6</factor>
  <center>
    <x-m>-0.01985</x-m>
    <y-m>0</y-m>
    <z-m>0.00511</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
