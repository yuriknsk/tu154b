<!--Controls-->

<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/altimeter/setting-inhg</property>
      <step>0.01</step>
      <min>10.0</min>
      <max>40.0</max>
    </binding>
  </action>
</animation>
