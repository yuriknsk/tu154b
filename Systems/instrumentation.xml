            84             252           247
            86             256           251
            88             259           254
            90             262           258
            92             265           261
            94             268           264
            96             271           268
            98             274           270
          </tableData>
        </table>
      </function>
    </fcs_function>
    <!--Ref speed-->
    <fcs_function name="instrumentation/v-ref">
      <description>Ref speed</description>
      <function>
        <table name="Ref speed due mass and flaps">
          <independentVar lookup="row">instrumentation/mass-t</independentVar>
          <independentVar lookup="column">fcs/flap-pos-deg</independentVar>
          <tableData>
            0             15            28           45
            60             290           265           247          233 
            62             295           268           251          237
            64             300           273           255          240
            66             306           277           259          245
            68             311           280           263          248
            70             316           284           267          252
            72             320           289           271          255
            74             324           293           275          259
            76             328           297           279          262
            78             332           301           283          265
            80             336           304           286          268
            82             340           308           290          272
            84             344           313           294          276
            86             348           317           298          280
            88             352           321           301          283
            90             356           325           305          286
            92             360           329           308          288
